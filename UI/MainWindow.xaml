<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="GOODLUCK!!!" SizeToContent="Height" Width="600"
        Icon="Assets/ChessLogooo.ico"
        WindowStartupLocation="CenterScreen"
        Background="Aqua">
    
    <!--Viewbox used so when the board scales, it stays a square 600 x 600-->
    <Viewbox>
        <Grid x:Name="grid_board" Width="600" Height="600">
            <!--The chess board image-->
            <Grid.Background>
                <ImageBrush ImageSource="Assets/ChessBoard.png"/>
            </Grid.Background>

            <!--Makes a cell on each square of the board-->
            <UniformGrid x:Name="grid_piece" Rows="8" Columns="8"
                     RenderOptions.BitmapScalingMode="HighQuality">
            </UniformGrid>


        </Grid>
    </Viewbox>
</Window>
